{
  "compilerOptions": {
    /* Base Options */
    "target": "ES2022",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/.cache/tsbuildinfo.json",

    /* Strictness */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "allowUnusedLabels": false,
    "allowUnreachableCode": false,

    /* Quality of Life */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "verbatimModuleSyntax": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "useUnknownInCatchVariables": true,

    /* Path Mapping */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./frontend/web-app/src/*"],
      "@backend/*": ["./backend/*"],
      "@ml/*": ["./backend/prediction-engine/src/ml/*"],
      "@data/*": ["./backend/prediction-engine/src/data/*"],
      "@analytics/*": ["./backend/prediction-engine/src/analytics/*"],
      "@betting/*": ["./backend/prediction-engine/src/betting/*"],
      "@core/*": ["./backend/prediction-engine/src/core/*"],
      "@monitoring/*": ["./backend/prediction-engine/src/monitoring/*"],
      "@api/*": ["./backend/prediction-engine/src/api/*"],
      "@components/*": ["./frontend/web-app/src/components/*"],
      "@lib/*": ["./frontend/web-app/src/lib/*"],
      "@utils/*": ["./frontend/web-app/src/lib/utils/*"],
      "@styles/*": ["./frontend/web-app/src/styles/*"],
      "@hooks/*": ["./frontend/web-app/src/hooks/*"],
      "@store/*": ["./frontend/web-app/src/store/*"],
      "@types/*": ["./frontend/web-app/src/lib/types/*"],
      "@config/*": ["./frontend/web-app/src/config/*"],
      "@services/*": ["./frontend/web-app/src/lib/services/*"],
      "@contexts/*": ["./frontend/web-app/src/contexts/*"],
      "@public/*": ["./frontend/web-app/public/*"]
    },

    /* Performance */
    "preserveSymlinks": true,
    "preserveWatchOutput": true,
    "disableSourceOfProjectReferenceRedirect": false,
    "disableSolutionSearching": false,
    "disableReferencedProjectLoad": false,

    /* Decorators */
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    /* Advanced */
    "importHelpers": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "declarationMap": true,
    "removeComments": false,
    "newLine": "lf",
    "stripInternal": false,

    /* Node.js */
    "types": ["node", "jest", "@testing-library/jest-dom"],
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },

  /* Include Files */
  "include": [
    "frontend/web-app/src/**/*.ts",
    "frontend/web-app/src/**/*.tsx",
    "frontend/web-app/src/**/*.js",
    "frontend/web-app/src/**/*.jsx",
    "backend/**/*.ts",
    "backend/**/*.tsx",
    "next-env.d.ts",
    "**/*.d.ts",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ],

  /* Exclude Files */
  "exclude": [
    "node_modules",
    "**/node_modules/*",
    ".next",
    "out",
    "build",
    "dist",
    "coverage",
    ".cache",
    ".tmp",
    ".backups",
    ".logs",
    ".secrets",
    "**/*.d.ts",
    "**/cypress/*",
    "**/playwright/*",
    "**/__tests__/*",
    "**/__mocks__/*",
    "**/*.spec.js",
    "**/*.test.js",
    "**/test-utils/*"
  ],

  /* Project References */
  "references": [
    { "path": "./frontend/web-app/tsconfig.app.json" },
    { "path": "./frontend/web-app/tsconfig.node.json" }
  ],

  /* TypeScript Version */
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "CommonJS"
    }
  },

  /* Watch Options */
  "watchOptions": {
    "watchFile": "useFsEvents",
    "watchDirectory": "useFsEvents",
    "fallbackPolling": "dynamicPriority",
    "synchronousWatchDirectory": true,
    "excludeDirectories": [
      "**/node_modules",
      ".next",
      "dist",
      "build"
    ]
  }
}
