# Quick Data APIs (Mock data for local)
STATSBOMB_API_KEY=mock_statsbomb_key
OPTA_API_KEY=mock_opta_key
SPORTRADAR_API_KEY=mock_sportradar_key
USE_MOCK_DATA=true
MOCK_DATA_PATH=./data/mock

# Quick Health Checks
HEALTH_CHECK_ENABLED=true
