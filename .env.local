PASSWORD_REQUIRE_UPPERCASE=false
PASSWORD_REQUIRE_LOWERCASE=false
PASSWORD_REQUIRE_NUMBERS=false
PASSWORD_REQUIRE_SYMBOLS=false
SESSION_COOKIE_SECURE=false
CSRF_ENABLED=false

# Quick Frontend
NEXT_PUBLIC_APP_ENV=local
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000
NEXT_PUBLIC_SENTRY_DSN=
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_TELEMETRY_DISABLED=1

# Quick Testing (In-memory)
TEST_DATABASE_URL=postgresql://goat_test:goat_test@localhost:5432/goat_test
TEST_REDIS_URL=redis://localhost:6380
TEST_MODE=true

# Quick Development Tools
DEBUG=true
DEBUG_PORT=9229
HOT_RELOAD=true
HOT_RELOAD_PORT=35729
ESLINT_ENABLED=true
TYPE_CHECK_ENABLED=true

# Quick Sports (Football only for local)
SUPPORTED_SPORTS=football
DEFAULT_SPORT=football
SPORTS_DATA_REFRESH_INTERVAL=60

# Quick Betting (Virtual mode)
BETTING_TEST_MODE=true
BETTING_VIRTUAL_BANKROLL=10000
BETTING_MIN_STAKE=1
BETTING_MAX_STAKE=100
