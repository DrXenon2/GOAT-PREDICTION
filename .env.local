# Environment
NODE_ENV=development
APP_ENV=local
TZ=UTC
LOG_LEVEL=debug

# Quick Start - Minimal Configuration
APP_NAME=GOAT Prediction (Local)
APP_VERSION=1.0.0-local
APP_URL=http://localhost:3000
API_URL=http://localhost:8000
ML_API_URL=http://localhost:8001
WS_URL=ws://localhost:8000

# Quick Features
ENABLE_BETTING=true
ENABLE_LIVE_PREDICTIONS=true
ENABLE_DEBUG_MODE=true
ENABLE_API_DOCS=true
ENABLE_SWAGGER_UI=true
ENABLE_HOT_RELOAD=true

# Quick Database (Docker Compose defaults)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=goat_user
POSTGRES_PASSWORD=goat_password
POSTGRES_DB=goat_prediction
POSTGRES_SSL_MODE=disable

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=goat_redis_pass
REDIS_DB=0

# Quick API
API_PORT=8000
API_HOST=0.0.0.0
API_WORKERS=2

# Quick JWT (Local only - NEVER production)
JWT_SECRET=local_jwt_super_secret_key_change_for_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Quick CORS (Local development)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8080
CORS_METHODS=GET,POST,PUT,PATCH,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-API-Key
CORS_CREDENTIALS=true

# Quick Rate Limiting (Disabled for local dev)
RATE_LIMIT_ENABLED=false
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=10000

# Quick ML Service
ML_SERVICE_PORT=8001
ML_SERVICE_HOST=0.0.0.0
ML_WORKERS=2
ML_GPU_ENABLED=false
ML_MODELS_DIR=./backend/prediction-engine/models
ML_DATA_DIR=./backend/prediction-engine/data

# Quick Feature Store (Disabled for local)
FEATURE_STORE_ENABLED=false
MLFLOW_TRACKING_URI=http://localhost:5000

# Quick Message Queue (Disabled for local)
KAFKA_ENABLED=false
RABBITMQ_ENABLED=false

# Quick Monitoring (Local tools)
SENTRY_ENABLED=false
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_ENABLED=true
GRAFANA_URL=http://localhost:3002
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# Quick Email (Mailhog for local)
EMAIL_ENABLED=true
EMAIL_HOST=localhost
EMAIL_PORT=1025
EMAIL_FROM=noreply@goat-prediction.local
EMAIL_FROM_NAME=GOAT Prediction Local

# Quick Storage (Local filesystem)
STORAGE_DRIVER=local
STORAGE_LOCAL_PATH=./storage
STORAGE_PUBLIC_URL=http://localhost:3000/storage

# Quick Stripe (Test mode)
STRIPE_ENABLED=true
STRIPE_SECRET_KEY=sk_test_1234567890abcdefghijklmnop
STRIPE_PUBLISHABLE_KEY=pk_test_1234567890abcdefghijklmnop
STRIPE_WEBHOOK_SECRET=whsec_test_1234567890abcdef

# Quick Security (Local relaxed)
