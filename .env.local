QUEUE_NAME=default

# Quick File Upload
STORAGE_MAX_FILE_SIZE=10485760 # 10MB
STORAGE_ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,webp,pdf,csv,json,txt

# Quick Logging (Console only)
LOG_FORMAT=pretty
LOG_FILE=
LOG_MAX_SIZE=10MB
LOG_MAX_FILES=5

# Quick Performance
PERFORMANCE_MONITORING=true
PERFORMANCE_SAMPLE_RATE=1.0

# Quick Error Handling
