# Quick API Keys (Local development)
API_KEYS=local_dev_key_123,test_api_key_456
API_KEY_HEADER=X-API-Key

# Quick Admin
ADMIN_EMAIL=admin@goat-prediction.local
ADMIN_PASSWORD=admin123
ADMIN_SECRET=local_admin_secret

# Quick Docker
DOCKER_COMPOSE_FILE=docker-compose.yml
DOCKER_NETWORK=goat-network
DOCKER_VOLUME_PREFIX=goat-local

# Quick Services Ports
FRONTEND_PORT=3000
ADMIN_PORT=3001
API_PORT=8000
ML_PORT=8001
POSTGRES_PORT=5432
REDIS_PORT=6379
KAFKA_PORT=9092
PROMETHEUS_PORT=9090
GRAFANA_PORT=3002
MAILHOG_PORT=8025

