# ============================================
# GOAT PREDICTION ULTIMATE - ENVIRONMENT TEMPLATE
# ============================================
# Copy this file to .env.development or .env.production
# Fill in your actual values and NEVER commit real credentials
# ============================================

# ============================================
# APPLICATION CONFIGURATION
# ============================================

# Environment
NODE_ENV=development
APP_ENV=development
TZ=UTC
LOG_LEVEL=info

# Application
APP_NAME=GOAT Prediction Ultimate
APP_VERSION=1.0.0
APP_URL=https://your-domain.com
API_URL=https://api.your-domain.com
ML_API_URL=https://ml-api.your-domain.com
WS_URL=wss://ws.your-domain.com

# Feature Flags
ENABLE_BETTING=true
ENABLE_LIVE_PREDICTIONS=true
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_MULTI_SPORT=true
ENABLE_DEBUG_MODE=false
ENABLE_API_DOCS=true
ENABLE_SWAGGER_UI=true

# Sports Configuration
SUPPORTED_SPORTS=football,basketball,tennis,esports,baseball,rugby,hockey
DEFAULT_SPORT=football
SPORTS_DATA_REFRESH_INTERVAL=300

# ============================================
# DATABASE CONFIGURATION
# ============================================

# PostgreSQL (Main Database)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=your_postgres_user
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_DB=your_database_name
POSTGRES_SSL_MODE=require
POSTGRES_POOL_SIZE=20
POSTGRES_TIMEOUT=30

# TimescaleDB (Time-series)
TIMESCALE_HOST=localhost
TIMESCALE_PORT=5433
TIMESCALE_USER=your_timescale_user
TIMESCALE_PASSWORD=your_timescale_password
TIMESCALE_DB=your_timeseries_db

# Redis (Caching & Sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0
REDIS_CACHE_TTL=3600
REDIS_SESSION_TTL=86400

# ============================================
# API & AUTHENTICATION
# ============================================

# API Gateway
API_PORT=8000
API_HOST=0.0.0.0
API_WORKERS=4

# JWT Authentication
JWT_SECRET=your_super_secret_jwt_key_change_this
JWT_ALGORITHM=HS256
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# API Keys
API_KEYS=your_api_key_1,your_api_key_2
API_KEY_HEADER=X-API-Key

# CORS Configuration
CORS_ORIGINS=https://your-domain.com,https://admin.your-domain.com

# ============================================
# ML & PREDICTION ENGINE
# ============================================

# ML Service
ML_SERVICE_PORT=8001
ML_SERVICE_HOST=0.0.0.0
ML_WORKERS=4

# ML Configuration
ML_GPU_ENABLED=false
ML_PREDICTION_TIMEOUT=30
ML_TRAINING_TIMEOUT=3600

# ============================================
# DATA COLLECTION & APIS
# ============================================

# Sports Data APIs
STATSBOMB_API_KEY=your_statsbomb_api_key
OPTA_API_KEY=your_opta_api_key
SPORTRADAR_API_KEY=your_sportradar_api_key

# Betting APIs
BETFAIR_APP_KEY=your_betfair_app_key
BETFAIR_USERNAME=your_betfair_username
BETFAIR_PASSWORD=your_betfair_password

PINNACLE_API_USERNAME=your_pinnacle_username
PINNACLE_API_PASSWORD=your_pinnacle_password

# ============================================
# MONITORING & LOGGING
# ============================================

# Sentry
SENTRY_ENABLED=true
SENTRY_DSN=your_sentry_dsn
SENTRY_ENVIRONMENT=production

# ============================================
# EMAIL & NOTIFICATIONS
# ============================================

# Email
EMAIL_ENABLED=true
EMAIL_HOST=smtp.your-provider.com
EMAIL_PORT=587
EMAIL_USER=your_email_user
EMAIL_PASSWORD=your_email_password
EMAIL_FROM=noreply@your-domain.com

# ============================================
# PAYMENT & SUBSCRIPTIONS
# ============================================

# Stripe
STRIPE_ENABLED=true
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# ============================================
# FILE STORAGE
# ============================================

# AWS S3
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=your_aws_region
AWS_S3_BUCKET=your_s3_bucket

# ============================================
# SECURITY
# ============================================

# Password Policy
PASSWORD_MIN_LENGTH=8
PASSWORD_MAX_ATTEMPTS=5
PASSWORD_LOCKOUT_DURATION=900

# Session Security
SESSION_SECRET=your_session_secret
SESSION_COOKIE_SECURE=true

# ============================================
# FRONTEND SPECIFIC
# ============================================

# Next.js
NEXT_PUBLIC_APP_ENV=production
NEXT_PUBLIC_API_URL=https://api.your-domain.com
NEXT_PUBLIC_WS_URL=wss://ws.your-domain.com
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn
NEXT_PUBLIC_GA_MEASUREMENT_ID=your_ga_id

# ============================================
# MISC & UTILITIES
# ============================================

# Health Checks
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PORT=8888

# ============================================
# BETTING CONFIGURATION
# ============================================

BETTING_TEST_MODE=false
BETTING_MIN_STAKE=1
BETTING_MAX_STAKE=1000
BETTING_DEFAULT_STAKE_PERCENTAGE=1
BETTING_KELLY_FRACTION=0.25

# ============================================
# END OF TEMPLATE
# ============================================

# IMPORTANT: Never commit actual credentials to version control
# Use environment variables or a secure secrets manager in production
